<h2>Изменить пароль</h2>

<%= form_for(resource, as: resource_name,
             url: password_path(resource_name),
             html: { method: :post, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <div class="col-sm-5">
      <%= f.label :password %><br />
      <%= f.email_field :password, autofocus: true, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-5">
      <%= f.label :password_confirmation %><br />
      <%= f.email_field :password_confirmation, autofocus: true, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
      <div class="col-sm-4">
        <%= f.submit "Изменить мой пароль", class: 'btn btn-primary form-control' %>
      </div>
    </div>
<% end %>

<%= render "devise/shared/links" %>

