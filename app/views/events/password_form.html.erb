<h1>Доступ только по пин-коду</h1>

<%= form_tag('', method: 'post') do |f| %>
  <div class="row">
    <div class="form-group">
      <div class="col-sm-5">
        <%= label 'Пин-код', :pincode %>
        <%= text_field_tag :pincode, params[:pincode], class: 'form-control' %>   
      </div>
    </div>    
  </div>

  <div class="row">
    <div class="col-sm-2">
      <%= submit_tag 'Отправить',
        class: 'btn btn-primary form-control buffer-both' 
      %>
    </div>
  </div>
<% end %>

<%= link_to 'На главную', events_path %>
